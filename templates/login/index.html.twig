{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
  <div class="container">
    <div class="container border mt-5 mb-5 pt-3">
      {{form_start(form) }}
      {{form_row(form.lastname, {'label': 'Pseudo'}) }}
      {{form_row(form.firstname, {'label': 'Pseudo'}) }}
      {{form_row(form.email, {'label': 'Votre email'}) }}
      {{form_row(form.password, {'label': 'Votre mot de passe'}) }}
      {{form_row(form.connexion, {'label': 'Sinscrire', 'attr': {'class':"btn btn-primary"}}) }}
      {{form_end(form) }}
    </div>
  </div>
{% endblock %}
