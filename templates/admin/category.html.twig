{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
{% if is_granted('ROLE_ADMIN') %}
<div class="container">
    <div class="row">
        <div class="col-6 rounded mt-4 z-depth-2 text-center">
            <a href="/admin/utilisateurs" >Gérer les utilisateurs</a>
        </div>
        <div class="col-6 rounded mt-4 z-depth-2 text-center">
            <a href="/admin/categories" >Gérer les categories</a>
        </div>
    </div>
</div>
{% endif %}
    <h1>Liste des catégories</h1>
    <table>
        <thead>
            <th>ID</th>
            <th>name</th>
            <th>Actions</th>
        </thead>
        <tbody>
            {# On boucle sur les utilisateurs #}
            {% for category in category %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td><a href="/admin/categories/modifier/{{category.id}} ">Modifier</a></td>
                </tr>
                
            {% else %}
                <p>Aucune catégorie saisie</p>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
