{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <h3 class="text-center mb-5 mt-5 amber-text">Liste des catégories</h3>
    <div class="container">
    <div class="row">
    <div class="z-depth-3 col-12 border border-dark rounded">
    <table class="centered responsive-table">
        <thead>
            <th>ID</th>
            <th>Nom</th>
            <th>Actions</th>
        </thead>
        <tbody>
            {# On boucle sur les utilisateurs #}
            {% for category in category %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td><a class="amber-text" href="/admin/categories/modifier/{{category.id}} ">Modifier</a></td>
                </tr>
                
            {% else %}
                <p>Aucune catégorie saisie</p>
            {% endfor %}
        </tbody>
    </table>
    </div>
    </div>
    <div class="row">
    <div class="col-12">
    <a href="/admin/categories/add" class="z-depth-3 waves-effect waves-light btn"><i class="material-icons left">add</i>Ajouter</a>
    </div>
    </div>
    </div>
    
    
{% endblock %}
